{
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "./stories"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    // "target": "es6",
    // "module": "es2015",
    // "lib": [
    //   "dom",
    //   "es5",
    //   "es6"
    // ],
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./stories"],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // "forceConsistentCasingInFileNames": true
  }
}